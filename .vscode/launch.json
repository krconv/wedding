{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web: Start",
      "command": "yarn start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/web"
    },
    {
      "name": "Web: Debugger",
      "cwd": "${workspaceFolder}/web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "API: Start",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/api",
      "args": ["api.main:app"],
      "port": 8080,
      "justMyCode": true,
      "autoReload": {
        "enable": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Full App: Start",
      "configurations": ["Web: Start", "API: Start", "Web: Debugger"],
      "stopAll": false,
      "presentation": {
        "order": 1,
        "group": "App"
      }
    }
  ]
}
